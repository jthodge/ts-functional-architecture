{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@core/*": [
        "./src/core/*"
      ],
      "@domain/*": [
        "./src/domain/*"
      ],
      "@repos/*": [
        "./src/repos/*"
      ],
      "@useCases/*": [
        "./src/useCases/*"
      ],
      "@graphql/*": [
        "./src/graphql/*"
      ],
    }
  }
}